{% doc %}
  @prompt
    Create a section having 3 images placed horizontally one after the other, below each image have heading and below heading have text, provide horizontal padding setting
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-column-images-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px {{ block.settings.horizontal_padding }}px;
  }

  .ai-three-column-images__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
    width: 100%;
  }

  .ai-three-column-images__column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-three-column-images__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-three-column-images__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-three-column-images__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-three-column-images__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-three-column-images__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    text-align: {{ block.settings.text_alignment }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .ai-three-column-images__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    text-align: {{ block.settings.text_alignment }};
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-three-column-images__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }
  }
{% endstyle %}

<three-column-images-{{ ai_gen_id }} class="ai-three-column-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-three-column-images__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign heading_key = 'heading_' | append: i
        assign text_key = 'text_' | append: i
        
        assign image = block.settings[image_key]
        assign heading = block.settings[heading_key]
        assign text = block.settings[text_key]
      %}
      
      <div class="ai-three-column-images__column-{{ ai_gen_id }}">
        <div class="ai-three-column-images__image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-three-column-images__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-three-column-images__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        
        {% if heading != blank %}
          <h3 class="ai-three-column-images__heading-{{ ai_gen_id }}">{{ heading }}</h3>
        {% endif %}
        
        {% if text != blank %}
          <div class="ai-three-column-images__text-{{ ai_gen_id }}">{{ text }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</three-column-images-{{ ai_gen_id }}>

<script>
  (function() {
    class ThreeColumnImages{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('three-column-images-{{ ai_gen_id }}', ThreeColumnImages{{ ai_gen_id }});
  })();
</script>

