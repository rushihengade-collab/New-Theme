{% doc %}
  @prompt
    Create a section have Heading and Subheading at the top both center aligned one below the other vertically
    
    then below above have to the left side of the section a title and description both are vertically placed one below the other and to the right side of the section have image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-content-section__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-content-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_subheading_gap }}px 0;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .ai-content-section__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-content-section__main-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .ai-content-section__content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-content-section__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_description_gap }}px 0;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
  }

  .ai-content-section__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-content-section__image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
  }

  .ai-content-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: block;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-content-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-content-section__main-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-content-section__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-content-section__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }

    .ai-content-section__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-content-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-content-section__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-content-section__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.subheading != blank %}
      <div class="ai-content-section__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}
  </div>

  <div class="ai-content-section__main-{{ ai_gen_id }}">
    <div class="ai-content-section__content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h3 class="ai-content-section__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-content-section__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-content-section__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-content-section__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-content-section__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-content-section__empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

