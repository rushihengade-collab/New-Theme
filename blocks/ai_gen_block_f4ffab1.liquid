{% doc %}
  @prompt
    create a new section for image this section should width is page width not full width. so add .container class to it's parent it will work properly. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-image-block__container-{{ ai_gen_id }} {
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
  }

  .ai-image-block__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-image-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-block__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-image-block__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.enable_link %}
    .ai-image-block__link-{{ ai_gen_id }} {
      display: block;
      cursor: pointer;
    }

    .ai-image-block__link-{{ ai_gen_id }}:hover .ai-image-block__image-{{ ai_gen_id }} {
      opacity: 0.9;
      transition: opacity 0.3s ease;
    }
  {% endif %}
{% endstyle %}

<div class="ai-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="container">
    <div class="ai-image-block__container-{{ ai_gen_id }}">
      <div class="ai-image-block__wrapper-{{ ai_gen_id }}">
        {% if block.settings.enable_link and block.settings.image_link != blank %}
          <a href="{{ block.settings.image_link }}" class="ai-image-block__link-{{ ai_gen_id }}">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 2000 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                class="ai-image-block__image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-image-block__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-image-block__empty-state-{{ ai_gen_id }}">
                  Next, add an image
                </div>
              </div>
            {% endif %}
          </a>
        {% else %}
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 2000 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              class="ai-image-block__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-image-block__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-image-block__empty-state-{{ ai_gen_id }}">
                Next, add an image
              </div>
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "checkbox",
      "id": "enable_link",
      "label": "Enable link",
      "default": false
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image link"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "label": "Top spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Image"
    }
  ],
  "tag": null
}
{% endschema %}
