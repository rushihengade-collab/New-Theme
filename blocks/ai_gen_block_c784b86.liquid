{% doc %}
  @prompt
    3 images to be placed in horizontal line without gap between image to image, also provide the setting of top and bottom padding, horizontal padding and image size , same for the mobile view, for mobile view the image should be vertically placed one by one
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-images-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_horizontal }}px;
    padding-right: {{ block.settings.padding_horizontal }}px;
  }

  .ai-three-images__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    width: 100%;
  }

  .ai-three-images__item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-three-images__item-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-three-images__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-three-images__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  @media screen and (max-width: 749px) {
    .ai-three-images-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_horizontal_mobile }}px;
      padding-right: {{ block.settings.padding_horizontal_mobile }}px;
    }

    .ai-three-images__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-three-images__item-{{ ai_gen_id }} img {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-three-images__placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }
  }
{% endstyle %}

<three-images-{{ ai_gen_id }} class="ai-three-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-three-images__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign image = block.settings[image_key]
      %}
      <div class="ai-three-images__item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 1200 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="ai-three-images__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</three-images-{{ ai_gen_id }}>

<script>
  (function() {
    class ThreeImages{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('three-images-{{ ai_gen_id }}', ThreeImages{{ ai_gen_id }});
  })();
</script>

