{% doc %}
  @prompt
    Provide the Heading & Subheading Rich Text Section both center align, also provide top and bottom padding and gap setting between heading and subheading
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-heading-subheading-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    text-align: center;
  }

  .ai-heading-subheading__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.gap }}px;
    align-items: center;
  }

  .ai-heading-subheading__heading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-heading-subheading__subheading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-heading-subheading__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-heading-subheading__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-heading-subheading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-heading-subheading__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-heading-subheading__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </div>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-heading-subheading__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heading & subheading",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Welcome to our store</p>"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our collection of quality products</p>"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between heading and subheading",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 15
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Subheading style"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Subheading size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#5c5c5c"
    }
  ],
  "presets": [
    {
      "name": "Heading & subheading"
    }
  ]
}
{% endschema %}
