      "label": "Column 1",
      "default": "Column 1"
    },
    {
      "type": "text",
      "id": "column_2_text",
      "label": "Column 2",
      "default": "Column 2"
    },
    {
      "type": "text",
      "id": "column_3_text",
      "label": "Column 3",
      "default": "Column 3"
    },
    {
      "type": "text",
      "id": "column_4_text",
      "label": "Column 4",
      "default": "Column 4"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
