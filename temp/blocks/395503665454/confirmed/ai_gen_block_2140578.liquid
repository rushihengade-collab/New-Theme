      "default": "#e0e0e0"
    },
    {
      "type": "checkbox",
      "id": "make_text_bold",
      "label": "Make text bold",
      "default": false
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
