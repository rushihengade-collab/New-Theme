{% doc %}
  @prompt
    Create a section having blocks, 
    
    Heading and Subheading placed at the center both are vertically aligned and below that have image which have 0 horizontal padding
{% enddoc %}
```liquid
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-content-section__inner-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-content-section__text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: {{ block.settings.text_padding_top }}px {{ block.settings.text_padding_horizontal }}px {{ block.settings.text_padding_bottom }}px {{ block.settings.text_padding_horizontal }}px;
    background-color: {{ block.settings.text_background_color }};
  }

  .ai-content-section__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    line-height: 1.2;
  }

  .ai-content-section__subheading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
  }

  .ai-content-section__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .ai-content-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-content-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-content-section__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-content-section__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
    }

    .ai-content-section__text-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.text_padding_top | times: 0.7 }}px {{ block.settings.text_padding_horizontal }}px {{ block.settings.text_padding_bottom | times: 0.7 }}px {{ block.settings.text_padding_horizontal }}px;
    }
  }
{% endstyle %}

<div
  class="ai-content-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-content-section__inner-{{ ai_gen_id }}">
    <div class="ai-content-section__text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-content-section__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-content-section__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}
    </div>

    <div class="ai-content-section__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-content-section__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-content-section__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-content-section__empty-state-{{ ai_gen_id }}">
            Add an image to complete this section
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

