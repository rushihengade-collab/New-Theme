      "default": 15
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 5,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 15
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "min": 5,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
