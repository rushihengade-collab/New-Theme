    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Table row"
    }
  ]
}
{% endschema %}
