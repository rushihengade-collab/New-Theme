  "settings": [
    {
      "type": "header",
      "content": "Column content"
    },
    {
      "type": "text",
      "id": "column_1",
      "label": "Column 1"
    },
    {
      "type": "text",
      "id": "column_2",
      "label": "Column 2"
    },
    {
      "type": "text",
      "id": "column_3",
      "label": "Column 3"
    },
    {
      "type": "text",
      "id": "column_4",
      "label": "Column 4"
    },
    {
      "type": "header",
      "content": "Row style"
    },
    {
      "type": "color",
      "id": "row_background_color",
