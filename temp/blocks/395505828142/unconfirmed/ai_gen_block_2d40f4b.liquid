{% doc %}
  @prompt
    Create a section having blocks, create a table, outside the table have the horizontal padding setting, the table should have 4 columns, entire table with rows and columns should be bordered, the rows will occur as per the addition of blocks, remove the rows
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-data-table-container-{{ ai_gen_id }} {
    width: 100%;
    padding-left: {{ block.settings.horizontal_padding }}px;
    padding-right: {{ block.settings.horizontal_padding }}px;
  }

  .ai-data-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    background-color: {{ block.settings.table_background }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
  }

  .ai-data-table-{{ ai_gen_id }} th,
  .ai-data-table-{{ ai_gen_id }} td {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    padding: {{ block.settings.cell_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-data-table-{{ ai_gen_id }} thead th {
    background-color: {{ block.settings.header_background }};
    color: {{ block.settings.header_text_color }};
    font-weight: 600;
  }

  .ai-data-table-{{ ai_gen_id }} tbody tr:nth-child(even) {
    background-color: {{ block.settings.row_alternate_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-data-table-container-{{ ai_gen_id }} {
      padding-left: {{ block.settings.horizontal_padding | times: 0.5 }}px;
      padding-right: {{ block.settings.horizontal_padding | times: 0.5 }}px;
    }

    .ai-data-table-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }

    .ai-data-table-{{ ai_gen_id }} th,
    .ai-data-table-{{ ai_gen_id }} td {
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-data-table-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <table class="ai-data-table-{{ ai_gen_id }}">
    <thead>
      <tr>
        <th>{{ block.settings.header_1 }}</th>
        <th>{{ block.settings.header_2 }}</th>
        <th>{{ block.settings.header_3 }}</th>
        <th>{{ block.settings.header_4 }}</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

{% schema %}
{
  "name": "Data table",
  "settings": [
    {
      "type": "header",
      "content": "Table headers"
    },
    {
      "type": "text",
      "id": "header_1",
      "label": "Column 1 header",
      "default": "Header 1"
    },
    {
      "type": "text",
      "id": "header_2",
      "label": "Column 2 header",
      "default": "Header 2"
    },
    {
      "type": "text",
      "id": "header_3",
      "label": "Column 3 header",
      "default": "Header 3"
    },
    {
      "type": "text",
      "id": "header_4",
      "label": "Column 4 header",
      "default": "Header 4"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "label": "Horizontal padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "cell_padding",
      "label": "Cell padding",
      "min": 5,
      "max": 40,
      "step": 5,
      "unit": "px",
      "default": 15
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border width",
      "min": 1,
      "max": 5,
      "step": 1,
      "unit": "px",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#5c5c5c"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "table_background",
      "label": "Table background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "header_background",
      "label": "Header background",
      "default": "#f3f3f3"
    },
    {
      "type": "color",
      "id": "header_text_color",
      "label": "Header text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "row_alternate_background",
      "label": "Alternate row background",
      "default": "#f9f9f9"
    }
  ],
  "presets": [
    {
      "name": "Data table"
    }
  ]
}
{% endschema %}