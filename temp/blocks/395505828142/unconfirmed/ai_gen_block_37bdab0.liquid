{% doc %}
  @prompt
    Create a section having blocks, create a table, outside the table have the horizontal padding setting, the table should have 4 columns, entire table with rows and columns should be bordered, the rows will occur as per the addition of blocks
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-data-table-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-left: {{ block.settings.horizontal_padding }}px;
    padding-right: {{ block.settings.horizontal_padding }}px;
  }

  .ai-table-wrapper-{{ ai_gen_id }} {
    width: 100%;
    overflow-x: auto;
  }

  .ai-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-table-{{ ai_gen_id }} th,
  .ai-table-{{ ai_gen_id }} td {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    padding: {{ block.settings.cell_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-table-{{ ai_gen_id }} th {
    background-color: {{ block.settings.header_background_color }};
    color: {{ block.settings.header_text_color }};
    font-weight: 600;
  }

  .ai-table-{{ ai_gen_id }} td {
    background-color: {{ block.settings.cell_background_color }};
    color: {{ block.settings.cell_text_color }};
  }

  .ai-table-{{ ai_gen_id }} tbody tr:nth-child(even) td {
    background-color: {{ block.settings.alternate_row_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-data-table-{{ ai_gen_id }} {
      padding-left: {{ block.settings.horizontal_padding | times: 0.5 }}px;
      padding-right: {{ block.settings.horizontal_padding | times: 0.5 }}px;
    }

    .ai-table-{{ ai_gen_id }} th,
    .ai-table-{{ ai_gen_id }} td {
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
      font-size: 14px;
    }
  }
{% endstyle %}

