{% doc %}
  @prompt
    Create a section having Background Image, normal image on left side and heading and paragraph on right side
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-content-section-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    display: block;
    overflow: hidden;
  }

  .ai-image-content-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-image-content-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-content-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
  }

  .ai-image-content-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-content-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 1;
  }

  .ai-image-content-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    padding: {{ block.settings.section_padding }}px;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-image-content-left-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
  }

  .ai-image-content-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-content-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-content-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #e0e0e0;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-image-content-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-content-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-content-right-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-image-content-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-content-paragraph-{{ ai_gen_id }} {
    font-size: {{ block.settings.paragraph_size }}px;
    color: {{ block.settings.paragraph_color }};
    line-height: 1.6;
    margin: 0;
    text-align: {{ block.settings.text_alignment }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-content-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_content_gap }}px;
      padding: {{ block.settings.mobile_section_padding }}px;
    }

    .ai-image-content-left-{{ ai_gen_id }} {
      flex: 0 0 100%;
      width: 100%;
    }

    .ai-image-content-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-image-content-paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_paragraph_size }}px;
    }
  }
{% endstyle %}

<image-content-section-{{ ai_gen_id }}
  class="ai-image-content-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-content-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-image-content-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.overlay_opacity > 0 %}
    <div class="ai-image-content-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-image-content-container-{{ ai_gen_id }}">
    <div class="ai-image-content-left-{{ ai_gen_id }}">
      <div class="ai-image-content-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.content_image %}
          <img
            src="{{ block.settings.content_image | image_url: width: 1000 }}"
            alt="{{ block.settings.content_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.content_image.width }}"
            height="{{ block.settings.content_image.height }}"
          >
        {% else %}
          <div class="ai-image-content-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
            <div class="ai-image-content-empty-state-{{ ai_gen_id }}">
              Next, add a content image
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-image-content-right-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-image-content-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.paragraph != blank %}
        <div class="ai-image-content-paragraph-{{ ai_gen_id }}">
          {{ block.settings.paragraph }}
        </div>
      {% endif %}
    </div>
  </div>
</image-content-section-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Image with content",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.3
    },
    {
      "type": "header",
      "content": "Content image"
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width",
      "min": 20,
      "max": 60,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Your heading here</p>"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Add your description text here. This section allows you to showcase your content with a beautiful background image and side-by-side layout.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading font",
      "default": "biz_udpmincho_n7"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_heading_size",
      "label": "Mobile heading size",
      "min": 16,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 28
    },
    {
      "type": "range",
      "id": "paragraph_size",
      "label": "Paragraph size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "mobile_paragraph_size",
      "label": "Mobile paragraph size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Paragraph",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "min_height",
      "label": "Minimum height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_section_padding",
      "label": "Mobile section padding",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "Content gap",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_content_gap",
      "label": "Mobile content gap",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "default": 30
    },
