{% doc %}
  @prompt
    Create a section having blocks, image with text
    
    Provide the setting for image position at left or right, on other side have title, description and button with background color, also provide the setting for top and bottom padding for both mobile and desktop, vertical and horizontal padding for both mobile and desktop
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding-top: {{ block.settings.padding_top_mobile }}px;
    padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
    padding-left: {{ block.settings.padding_horizontal_mobile }}px;
    padding-right: {{ block.settings.padding_horizontal_mobile }}px;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    flex: 1;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 16px;
    padding-top: {{ block.settings.content_padding_vertical_mobile }}px;
    padding-bottom: {{ block.settings.content_padding_vertical_mobile }}px;
    padding-left: {{ block.settings.content_padding_horizontal_mobile }}px;
    padding-right: {{ block.settings.content_padding_horizontal_mobile }}px;
  }

  .ai-image-text-title-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size_mobile }}px;
    line-height: 1.2;
  }

  .ai-image-text-description-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size_mobile }}px;
    line-height: 1.6;
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-image-text-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_desktop }}px;
      padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
      padding-left: {{ block.settings.padding_horizontal_desktop }}px;
      padding-right: {{ block.settings.padding_horizontal_desktop }}px;
    }

    .ai-image-text-container-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.image_position == 'left' %}row{% else %}row-reverse{% endif %};
      gap: 40px;
    }

    .ai-image-text-content-{{ ai_gen_id }} {
      padding-top: {{ block.settings.content_padding_vertical_desktop }}px;
      padding-bottom: {{ block.settings.content_padding_vertical_desktop }}px;
      padding-left: {{ block.settings.content_padding_horizontal_desktop }}px;
      padding-right: {{ block.settings.content_padding_horizontal_desktop }}px;
    }

    .ai-image-text-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }

    .ai-image-text-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_desktop }}px;
    }
  }
{% endstyle %}

<div class="ai-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1400 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-image-text-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-image-text-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-image-text-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-image-text-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

