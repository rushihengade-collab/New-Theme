{% doc %}
  @prompt
    Create a section having blocks, provide heading, subheading and image all vertically placed and heading and subheading are center aligned, have 0 horizontal padding for image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-content-block__inner-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.spacing_between_elements }}px;
    width: 100%;
  }

  .ai-content-block__text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.text_spacing }}px;
    padding: 0 {{ block.settings.text_horizontal_padding }}px;
    width: 100%;
  }

  .ai-content-block__heading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
  }

  .ai-content-block__subheading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
  }

  .ai-content-block__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    padding: 0;
  }

  .ai-content-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-height: 500px;
  }

  .ai-content-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-content-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-content-block__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-content-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-content-block__inner-{{ ai_gen_id }}">
    <div class="ai-content-block__text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-content-block__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-content-block__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}
    </div>

    <div class="ai-content-block__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-content-block__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-content-block__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-content-block__empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Content block",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading here"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Font",
      "default": "biz_udpmincho_n7"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Subheading"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Add your subheading text here</p>"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Color",
      "default": "#5c5c5c"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_between_elements",
      "label": "Space between text and image",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "text_spacing",
      "label": "Space between heading and subheading",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "text_horizontal_padding",
      "label": "Text horizontal padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Content block"
    }
  ]
}
{% endschema %}
