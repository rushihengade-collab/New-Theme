<div class="section kikumatsu-product-lineup-section">
  <div class="kikumatsu-product-lineup-section-container">
    <h2 class="kikumatsu-product-lineup-section-title">{{ section.settings.title }}</h2>
    <div class="kikumatsu-product-lineup-section-content">
      {% for block in section.blocks %}
        <a
          class="kikumatsu-product-lineup-section-content-item"
          href="{{ block.settings.link }}"
          {{ block.shopify_attributes }}
        >
          <div class="kikumatsu-product-lineup-section-content-item-image-wrap">
            <img
              class="kikumatsu-product-lineup-section-content-item-image"
              src="{{ block.settings.image | image_url: width: 1000 }}"
              alt="{{ block.settings.title_1 }}"
              width="1000"
              height="1000"
              loading="lazy"
            >
          </div>
          <h4 class="kikumatsu-product-lineup-section-content-item-title">
            <span class="kikumatsu-product-lineup-section-content-item-title-line1">{{ block.settings.title_1 }}</span>
            <span class="kikumatsu-product-lineup-section-content-item-title-line2">{{ block.settings.title_2 }}</span>
          </h4>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .kikumatsu-product-lineup-section {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }

  .kikumatsu-product-lineup-section-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .kikumatsu-product-lineup-section-title {
    text-align: center;
  }

  .kikumatsu-product-lineup-section-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px 40px;
    align-items: start;
  }

  .kikumatsu-product-lineup-section-content-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .kikumatsu-product-lineup-section-content-item-image-wrap {
    width: 100%;
    aspect-ratio: 1;
    max-width: 320px;
    margin: 0 auto 15px;
    overflow: hidden;
  }

  .kikumatsu-product-lineup-section-content-item-image-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .kikumatsu-product-lineup-section-content-item-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .kikumatsu-product-lineup-section-content-item-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin: 0;
    font-weight: 500;
    line-height: 1.2;
    font-size: 1.25rem;
  }

  .kikumatsu-product-lineup-section-content-item-title-line1 {
    display: block;
  }

  .kikumatsu-product-lineup-section-content-item-title-line2 {
    display: block;
  }

  .kikumatsu-product-lineup-section-content-item-title-link {
    color: #000;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: #2563eb;
  }

  .kikumatsu-product-lineup-section-content-item-title-link:hover {
    color: #1d4ed8;
  }

  @media (max-width: 768px) {
    .kikumatsu-product-lineup-section {
      padding-top: {{ section.settings.padding-top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.9 }}px;
    }

    .kikumatsu-product-lineup-section-title {
      margin-bottom: 32px;
    }

    .kikumatsu-product-lineup-section-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px 20px;
    }

    .kikumatsu-product-lineup-section-content-item-title {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .kikumatsu-product-lineup-section {
      padding-top: {{ section.settings.padding-top | times: 0.85 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.85 }}px;
    }
    .kikumatsu-product-lineup-section-title{
        margin-bottom: 25px;
    }
    .kikumatsu-product-lineup-section-content {
      grid-template-columns: 1fr;
      gap: 50px;
      max-width: max(280px, 100%);
      margin: 0 auto;
    }

    .kikumatsu-product-lineup-section-content-item-image-wrap {
      max-width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Kikumatsu Product Lineup",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "product-lineup",
      "name": "Product Lineup",
      "settings": [
        {
          "type": "text",
          "id": "title_1",
          "label": "Title 1"
        },
        {
          "type": "text",
          "id": "title_2",
          "label": "Title 2"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kikumatsu Product Lineup"
    }
  ]
}
{% endschema %}
