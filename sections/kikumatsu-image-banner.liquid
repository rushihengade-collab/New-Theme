<style>
  .kikumatsu-image-banner-section {
    width: 100%;
    overflow: hidden;
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }
  .kikumatsu-image-banner-section-container {
    width: 100%;
    max-width: 100%;
    line-height: 0;
  }
  .kikumatsu-image-banner-section-container img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  @media (max-width: 768px) {
    .kikumatsu-image-banner-section {
      padding-top: {{ section.settings.padding-top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.9 }}px;
    }
  }
  @media (max-width: 480px) {
    .kikumatsu-image-banner-section {
      padding-top: {{ section.settings.padding-top | times: 0.85 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.85 }}px;
    }
  }
</style>

<div class="kikumatsu-image-banner-section">
  <div class="kikumatsu-image-banner-section-container">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | escape }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        loading="lazy"
        fetchpriority="low"
      >
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Kikumatsu Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Kikumatsu Image Banner"
    }
  ]
}
{% endschema %}
