<div
  class="kikumatsu-hero-section"
  id="kikumatsu-hero-{{ section.id }}"
  style="padding-top: {{ section.settings.padding-top }}px; padding-bottom: {{ section.settings.padding-bottom }}px;"
>
  <div class="">
    <div class="kikumatsu-hero-container">
      <div class="kikumatsu-hero-left">
        <div class="kikumatsu-hero-left-slider">
          {% for block in section.blocks %}
            {% if block.type == 'right_side_image' and block.settings.image %}
              <div
                class="kikumatsu-hero-left-image{% if forloop.first %} active{% endif %}"
                data-index="{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
              >
                <img
                  src="{{ block.settings.image | image_url: width: 1000 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="1000"
                  height="1000"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                >
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="kikumatsu-hero-right">
        {% if section.settings.left_side_image %}
          <img
            src="{{ section.settings.left_side_image | image_url: width: 1000 }}"
            alt="{{ section.settings.left_side_image.alt | escape }}"
            width="1000"
            height="1000"
            loading="eager"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-container {
    display: grid;
    grid-template-columns: 1.65fr 1fr;
    gap: 0;
    align-items: stretch;
    min-height: 600px;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left {
    position: relative;
    overflow: hidden;
    background: #f5f5f5;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left-slider {
    position: absolute;
    inset: 0;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left-image {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left-image.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left-image.active.zoom img {
    animation: kikumatsu-zoom-{{ section.id }} 2s ease-out forwards;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-right {
    position: relative;
    overflow: hidden;
  }

  #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @keyframes kikumatsu-zoom-{{ section.id }} {
    0% { transform: scale(1); }
    100% { transform: scale(1.12); }
  }

  @media (max-width: 749px) {
    #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-container {
      grid-template-columns: 1fr;
      min-height: 300px;
    }

    #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-left {
      min-height: 280px;
    }

    #kikumatsu-hero-{{ section.id }} .kikumatsu-hero-right {
      min-height: 280px;
    }
  }
</style>

<script>
  (function () {
    const section = document.getElementById('kikumatsu-hero-{{ section.id }}');
    if (!section) return;

    const slides = section.querySelectorAll('.kikumatsu-hero-left-image');
    if (slides.length <= 1) return;

    const SHOW_DURATION_MS = 2000;
    const ZOOM_DURATION_MS = 2000;
    const TOTAL_CYCLE_MS = SHOW_DURATION_MS + ZOOM_DURATION_MS;

    let currentIndex = 0;
    let zoomTimeout;

    function goToNext() {
      clearTimeout(zoomTimeout);
      slides[currentIndex].classList.remove('active', 'zoom');
      currentIndex = (currentIndex + 1) % slides.length;
      const next = slides[currentIndex];
      next.classList.add('active');
      next.offsetHeight;

      zoomTimeout = setTimeout(function () {
        next.classList.add('zoom');
      }, SHOW_DURATION_MS);
    }

    zoomTimeout = setTimeout(function () {
      slides[0].classList.add('zoom');
    }, SHOW_DURATION_MS);

    setInterval(goToNext, TOTAL_CYCLE_MS);
  })();
</script>

{% schema %}
{
  "name": "Kikumatsu Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_side_image",
      "label": "Left Side Image"
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Kikumatsu Hero"
    }
  ],
  "blocks": [
    {
      "type": "right_side_image",
      "name": "Right Side Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
