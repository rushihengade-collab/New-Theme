{
  "name": "Access Nakao Page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },

    {
      "type": "text",
      "id": "google_map_btn_text",
      "label": "Google Map Button Text"
    },
    {
      "type": "url",
      "id": "google_map_btn_link",
      "label": "Google Map Button Link"
    },
    {
      "type": "text",
      "id": "address_text",
      "label": "Address Text"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "phone_text",
      "label": "Phone Text"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone"
    },
    {
      "type": "text",
      "id": "transportation",
      "label": "Transportation Text"
    },
    {
      "type": "textarea",
      "id": "business_hours",
      "label": "Transportation"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "transportation_item",
      "name": "Transportation Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Access Nakao Page"
    }
  ]
}
{% endschema %}
