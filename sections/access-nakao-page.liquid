<div class="access-nakao-page section">
  <div class="access-nakao-page-content">
    <h2 class="access-nakao-page-title">
      {{ section.settings.title }}
    </h2>
    <div class="access-nakao-page-content-inner">
      <div class="access-nakao-page-content-inner-images">
        <div class="access-nakao-page-content-image">
          <img
            src="{{ section.settings.image_1 | image_url: width: 1000 }}"
            alt="{{ section.settings.image_1.alt }}"
            width="100%"
            height="100%"
          >
        </div>
        <div class="access-nakao-page-content-image">
          <img
            src="{{ section.settings.image_2 | image_url: width: 1000 }}"
            alt="{{ section.settings.image_2.alt }}"
            width="100%"
            height="100%"
          >
        </div>
      </div>
      <div>
        <a href="{{ section.settings.google_map_btn_link }}" class="access-nakao-page-content-google-map-btn">
          {{- section.settings.google_map_btn_text -}}
        </a>
      </div>
      <div class="access-nakao-page-content-inner-meta-data">
        <div class="access-nakao-page-content-inner-meta-data-item access-nakao-page-content-inner-meta-data-item-inline">
          <p>{{ section.settings.address_text }}:</p>
          <p>{{ section.settings.address }}</p>
        </div>

        <div class="access-nakao-page-content-inner-meta-data-item access-nakao-page-content-inner-meta-data-item-inline">
          <p>{{ section.settings.phone_text }}:</p>
          <p>{{ section.settings.phone }}</p>
        </div>

        <div class="access-nakao-page-content-inner-meta-data-item">
          <p>{{ section.settings.transportation }}:</p>
          <div class="access-nakao-page-transportation-block">
            {% for block in section.blocks %}
              <div class="access-nakao-page-transportation-item">
                <p>â—‡ {{ block.settings.title }}:</p>
                <p>{{ block.settings.description }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .access-nakao-page {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }

  .access-nakao-page-content {
    width: 100%;
    margin: 0 auto;
    max-width: 1180px;
  }

  .access-nakao-page-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1a1a1a;
    text-align: left;
    margin: 0 0 2rem 0;
    letter-spacing: 0.02em;
  }

  .access-nakao-page-content-inner {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Two images side by side */
  .access-nakao-page-content-inner-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .access-nakao-page-content-image {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .access-nakao-page-content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Google Maps button */
  .access-nakao-page-content-google-map-btn {
    display: inline-block;
    padding: 0.6rem 1.25rem;
    background: #fff;
    border: 1px solid #333;
    text-decoration: none;
    font-size: 0.95rem;
    margin-bottom: 1.75rem;
    transition: background 0.2s, color 0.2s;
  }

  .access-nakao-page-content-google-map-btn:hover {
    background: #1a1a1a;
    color: #fff;
  }

  /* Address, Phone, Transportation block */
  .access-nakao-page-content-inner-meta-data {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .access-nakao-page-content-inner-meta-data-item > p:first-child {
    margin: 0 0 0.25rem 0;
    font-weight: 600;
  }

  .access-nakao-page-content-inner-meta-data-item > p:not(:first-child) {
    margin: 0;
  }

  .access-nakao-page-content-inner-meta-data-item .access-nakao-page-transportation-block {
    margin-top: 0.5rem;
    padding-left: 2rem;
  }

  .access-nakao-page-transportation-item {
    margin-bottom: 1.25rem;
  }

  .access-nakao-page-transportation-item:last-child {
    margin-bottom: 0;
  }

  .access-nakao-page-transportation-item p:first-child {
    margin: 0;
    font-weight: 600;
  }

  .access-nakao-page-transportation-item p:last-child {
    margin: 0;
    padding-left: 1rem;
    text-indent: 3rem;
  }
  .access-nakao-page-content-inner-meta-data-item-inline{
    display: flex;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .access-nakao-page {
      padding-top: {{ section.settings.padding-top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.9 }}px;
    }

    .access-nakao-page-content-inner-images {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .access-nakao-page-title {
      margin-bottom: 1.5rem;
      font-size: 1.5rem;
    }
    .access-nakao-page-content-inner-meta-data-item .access-nakao-page-transportation-block{
        padding-left:1rem
    }
  }

  @media (max-width: 480px) {
    .access-nakao-page {
      padding-top: {{ section.settings.padding-top | times: 0.85 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.85 }}px;
    }

    .access-nakao-page-content-inner-meta-data-item .access-nakao-page-transportation-block{
        padding-left:0.5rem
    }

    .access-nakao-page-title {
      margin-bottom: 1.25rem;
    }

    .access-nakao-page-content-google-map-btn {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .access-nakao-page-transportation-item p:last-child{
        padding-left:0.5rem;
    }
  }

  @media (max-width: 360px) {
    .access-nakao-page-content-inner-meta-data-item .access-nakao-page-transportation-block{
        padding-left:3px;
    }
  }
</style>

