<div class="section management-philosophy-section">
  <div class="management-philosophy-section-container">
    <h2 class="management-philosophy-section-title">{{ section.settings.title }}</h2>
    <div class="management-philosophy-section-content">
      {% for block in section.blocks %}
        <div class="management-philosophy-section-content-item">
          <h3 class="management-philosophy-section-content-item-title">{{ block.settings.title }}</h3>
          <div class="management-philosophy-section-content-item-description">{{ block.settings.description }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .management-philosophy-section {
    max-width: 1180px;
    margin: 0 auto;
  }

  .management-philosophy-section-container {

    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }

  .management-philosophy-section-title {
    margin: 0 0 40px 0;
  }

  .management-philosophy-section-content {
    display: flex;
    flex-direction: column;
    gap: 55px;
  }

  .management-philosophy-section-content-item {
    text-align: center;
  }

  .management-philosophy-section-content-item-title {
    font-size: 26px;
    font-weight: bold;
    margin: 0 0 15px 0;
  }

  .management-philosophy-section-content-item-description {
    white-space: pre-line;
    max-width: 640px;
    text-align: left;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .management-philosophy-section-container {
      padding-top: {{ section.settings.padding-top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.9 }}px;
    }

    .management-philosophy-section-content {
      gap: 40px;
    }

    .management-philosophy-section-content-item-title {
      font-size: 22px;
      margin-bottom: 16px;
    }
  }

  @media (max-width: 480px) {
    .management-philosophy-section-container {
      padding-top: {{ section.settings.padding-top | times: 0.85 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.85 }}px;
    }

    .management-philosophy-section-title {
      margin-bottom: 28px;
    }

    .management-philosophy-section-content {
      gap: 35px;
    }

    .management-philosophy-section-content-item-title {
      font-size: 20px;
      margin-bottom: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "Management Philosophy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "management_philosophy",
      "name": "Management Philosophy",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Management Philosophy"
    }
  ]
}
{% endschema %}
