<div class="tsubukon-image-section">
  <div class="tsubukon-image-wrapper">
    <div class="tsubukon-image-heading">
      {% if section.settings.title_1 != blank  %}
        {% if section.settings.add_border_bottom_to_title == "yes" %}
          {% render 'header-block', header: section.settings.title_1 %}
        {% else %}
          <h2 class="tsubukon-image-title-line1">{{ section.settings.title_1 }}</h2>
        {% endif %}
      {% endif %}
      {% if section.settings.title_2 != blank %}
        <h2 class="tsubukon-image-title-line2">{{ section.settings.title_2 }}</h2>
      {% endif %}
    </div>
    {% if section.settings.image != blank %}
      <div class="tsubukon-image-figure">
        <img
          src="{{ section.settings.image | image_url: width: 1000 }}"
          alt="{{ section.settings.image.alt | default: section.settings.title_1 }}"
          width="1000"
          height="1000"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</div>

<style>
  .tsubukon-image-section {
    background: #fff;
  }
  .tsubukon-image-wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    max-width: 960px;
    margin: 0 auto;
    text-align: center;
  }
  .tsubukon-image-heading {
    margin-bottom: 1.5rem;
  }
  .tsubukon-image-title-line1,
  .tsubukon-image-title-line2 {
    margin: 0;
    line-height:1.3;
  }
  .tsubukon-image-title-line2{
    margin-bottom:1.2rem;
  }
  .tsubukon-image-figure {
    margin: 0 auto;
    max-width: 100%;
  }
  .tsubukon-image-figure img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    height: auto;
  }
  @media (max-width: 768px) {
    .tsubukon-image-wrapper {
      padding-top: {{ section.settings.padding_top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.9 }}px;
    }
    .tsubukon-image-heading {
      margin-bottom: 1rem;
    }
  }
  @media (min-width: 769px) and (max-width: 1024px) {
    .tsubukon-image-wrapper {
      padding-top: {{ section.settings.padding_top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.9 }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Tsubukon Image",
  "settings": [
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2"
    },
    {
      "type": "radio",
      "id": "add_border_bottom_to_title",
      "label": "Add Border Bottom to Title",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Tsubukon Image Section"
    }
  ]
}
{% endschema %}
