<div class="section delivery-record-section">
  <div class="delivery-record-section-container">
    <h2 class="delivery-record-section-title">{{ section.settings.title }}</h2>
    <div class="delivery-record-section-content">
      <div class="delivery-record-section-content-item-header">
        <h3>{{ section.settings.subtitle }}</h3>
        <span class="delivery-record-decorative">- {{ section.settings.title | upcase }} -</span>
      </div>
      {% if section.settings.description != blank %}
        <div class="delivery-record-section-content-item-description">{{ section.settings.description }}</div>
      {% endif %}
      {% if section.settings.footer_text != blank %}
        <div class="delivery-record-section-content-item-footer">( {{ section.settings.footer_text }} )</div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .delivery-record-section {
    max-width: 1180px;
    margin: 0 auto;
  }

  .delivery-record-section-container {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }

  /* मुख्य शीर्षक - डावीकडे संरेखित, मोठा सेरिफ़ */
  .delivery-record-section-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    text-align: left;
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
  }

  /* कंटेंट एरिया - पॅडिंग */
  .delivery-record-section-content {
    padding-left: 0;
    padding-right: 0;
  }

  /* उपशीर्षक ब्लॉक - मध्यभागी */
  .delivery-record-section-content-item-header {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .delivery-record-section-content-item-header h3 {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    margin: 0;
  }

  /* "~ DELIVERY RECORD ~" - लहान, हलके रंग */
  .delivery-record-section-content-item-header .delivery-record-decorative {
    font-size: 0.8125rem;
    letter-spacing: 0.02em;
    color:#191971;
  }

  /* मुख्य सामग्री - कंपन्यांची यादी */
  .delivery-record-section-content-item-description {
    text-align: left;
    max-width: 750px;
    margin:auto;
    padding: 0 0.5rem 0 0;
  }

  /* तळटीप - मध्यभागी, लहान फॉन्ट */
  .delivery-record-section-content-item-footer {
    text-align: center;
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .delivery-record-section-content-item-footer:empty {
    display: none;
  }

  @media (max-width: 768px) {
    .delivery-record-section-container {
      padding-top: {{ section.settings.padding-top | times: 0.9 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.9 }}px;
      padding-left: 16px;
      padding-right: 16px;
    }
  }

  @media (max-width: 480px) {
    .delivery-record-section-container {
      padding-top: {{ section.settings.padding-top | times: 0.85 }}px;
      padding-bottom: {{ section.settings.padding-bottom | times: 0.85 }}px;
      padding-left: 12px;
      padding-right: 12px;
    }
  }
</style>
{% schema %}
{
  "name": "Delivery Record",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Delivery Record"
    }
  ]
}
{% endschema %}
